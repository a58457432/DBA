connect target /
run
{
allocate channel ch1 type disk;
allocate channel ch2 type disk;
backup as compressed backupset incremental level 2 database include current controlfile format '/orabak_nfs/qijia/backup_%s_%T.lv2';
BACKUP as compressed backupset ARCHIVELOG ALL NOT BACKED UP 1 TIMES format '/orabak_nfs/qijia/arch_%s_%T.bak';
backup current controlfile format '/orabak_nfs/qijia/controlfile_%s_%T.bak';
DELETE ARCHIVELOG ALL COMPLETED BEFORE 'SYSDATE-7';
release channel ch1;
release channel ch2;
}
